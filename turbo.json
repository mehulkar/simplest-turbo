{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "env": ["A"],
      "dependsOn": ["^build"],
      "outputs": [
        "a_foo.txt"
      ]
    },
    "lint": {
      "env": ["B"]
    },
    "devbroken": {
      "persistent": true,
      "dependsOn": ["^devbroken", "app-b#foox"]
    },
    "devworks": {
      "persistent": true
    },
    "//#whatever": {},
    "app-b#foo": {}
  }
}
